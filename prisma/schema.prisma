generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  STORE_OWNER
  ADMIN
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  role      Role      @default(USER)
  createdAt DateTime  @default(now())

  // relaci√≥n: un usuario puede tener varias tiendas
  stores    Store[]
}

model Store {
  id        Int       @id @default(autoincrement())
  name      String
  ownerId   Int
  owner     User      @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  products  Product[]

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([ownerId])
}

model Product {
  id          Int       @id @default(autoincrement())
  name        String
  description String?
  price       Decimal    @db.Decimal(10, 2)

  storeId     Int
  store       Store      @relation(fields: [storeId], references: [id], onDelete: Cascade)

  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@index([storeId])
}
